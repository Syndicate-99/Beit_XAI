    plt.ylim(0, 100)
    plt.xticks(fontsize=14)
    plt.yticks(fontsize=12)
    plt.tight_layout()
    plt.show()
    
    return {
        'class': class_name,
        'probability': probability,
        'pneumonia_probability': pneumonia_prob
    }

